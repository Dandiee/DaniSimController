<Window x:Class="DaniSimController.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:DaniSimController.Models"
        xmlns:views="clr-namespace:DaniSimController.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="500"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <views:SimVarBrowserView Grid.Column="0"/>
   
            <views:SimVarMonitorView Grid.Column="1"/>

            <StackPanel Grid.Column="2" Margin="5">
                <views:PollingView/>
            </StackPanel>
    </Grid>
</Window>
