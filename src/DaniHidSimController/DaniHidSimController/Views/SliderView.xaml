<UserControl x:Class="DaniHidSimController.Views.SliderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}" Margin="0 0 0 5" TextAlignment="Center"/>

        <Grid Grid.Row="1" x:Name="GrfxContainer">
            <Rectangle Width="5" Fill="Black" />
            
            <Rectangle StrokeThickness="1" Stroke="Black" Fill="#999999" VerticalAlignment="Top"
                       Margin="{Binding KnobMargin, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       Width="{Binding KnobWidth, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       Height="{Binding KnobHeight, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        </Grid>
        <TextBlock Grid.Row="2" Text="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}}"  TextAlignment="Center" Margin="0 5 0 0"/>
    </Grid>
</UserControl>
